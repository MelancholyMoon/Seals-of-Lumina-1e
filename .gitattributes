# Default: treat all files detectable as text as text and normalize to LF in the repo

text=auto

# Explicitly keep LF for common code/text files

*.md    text eol=lf
*.txt   text eol=lf
*.sh    text eol=lf
*.py    text eol=lf
*.js    text eol=lf
*.css   text eol=lf
*.html  text eol=lf
*.json  text eol=lf
*.xml   text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf

